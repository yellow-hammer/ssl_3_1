// См. МашиночитаемыеДоверенностиФНСПереопределяемый.ПриПроверкеДоверенностиПодписи
Процедура ПриПроверкеДоверенностиПодписи(ДанныеДоверенности, Сертификат, ПротоколПроверки) Экспорт
	
	Если ТипЗнч(ДанныеДоверенности.ПодписанныйОбъект) <> Тип("СправочникСсылка._ДемоСчетНаОплатуПокупателюПрисоединенныеФайлы") Тогда
		Возврат;
	КонецЕсли;
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	_ДемоОрганизации.ИНН КАК ИНН,
	|	_ДемоОрганизации.КПП КАК КПП,
	|	_ДемоОрганизации.Ссылка КАК Организация
	|ИЗ
	|	Справочник._ДемоСчетНаОплатуПокупателюПрисоединенныеФайлы КАК _ДемоСчетНаОплатуПокупателюПрисоединенныеФайлы
	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Документ._ДемоСчетНаОплатуПокупателю КАК _ДемоСчетНаОплатуПокупателю
	|			ВНУТРЕННЕЕ СОЕДИНЕНИЕ Справочник._ДемоОрганизации КАК _ДемоОрганизации
	|			ПО _ДемоСчетНаОплатуПокупателю.Организация = _ДемоОрганизации.Ссылка
	|		ПО _ДемоСчетНаОплатуПокупателюПрисоединенныеФайлы.ВладелецФайла = _ДемоСчетНаОплатуПокупателю.Ссылка
	|ГДЕ
	|	_ДемоСчетНаОплатуПокупателюПрисоединенныеФайлы.Ссылка = &Ссылка";
	
	Запрос.УстановитьПараметр("Ссылка", ДанныеДоверенности.ПодписанныйОбъект);
	РезультатЗапроса = Запрос.Выполнить();
	Если РезультатЗапроса.Пустой() Тогда
		Возврат;
	КонецЕсли;
	
	Выборка = РезультатЗапроса.Выбрать();
	Выборка.Следующий();
	
	ИНН = Выборка.ИНН;
	КПП = Выборка.КПП;
	Организация = Выборка.Организация;
	
	Отбор = Новый Структура("МашиночитаемаяДоверенность", ДанныеДоверенности.Ссылка);
	Доверители = МашиночитаемыеДоверенностиФНС.ДоверенностиСОтбором(Отбор, "ДоверительИНН, ДоверительКПП", Дата(1,1,1));
	
	ДоверительНайден = Ложь;
	Для Каждого Доверитель Из Доверители Цикл
		Если Доверитель.ДоверительИНН <> ИНН 
			Или Доверитель.ДоверительКПП <> КПП Тогда
			Продолжить;
			ДоверительНайден = Истина;
			Прервать;
		КонецЕсли;
	КонецЦикла;
	
	ПроверкаДокумента = ПротоколПроверки["ПроверкаДокумента"];
	ПроверкаДокумента.ЗаголовокПроверки = НСтр("ru='Проверка счета на оплату'");
	ПроверкаДокумента.ДатаПроверки = ТекущаяДатаСеанса();
	
	Если ДоверительНайден Тогда 
		ПроверкаДокумента.Верна = Истина;
	Иначе
		ПроверкаДокумента.Верна = Ложь;
		ПроверкаДокумента.ТекстПроверки = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			НСтр("ru='Демо: Организация %1 (ИНН %2, КПП %3) не соответствует доверенности'"), Организация, ИНН, КПП);
	КонецЕсли;
		
	Если ТипЗнч(ДанныеДоверенности.Полномочия) = Тип("РезультатЗапроса") Тогда
		Полномочия = ДанныеДоверенности.Полномочия.Выгрузить();
