				"AUTO",
				"USE");
		Иначе
			ЗначениеНастройкиПрокси = "DONT_USE";
		КонецЕсли;
	КонецЕсли;
	Результат.Вставить("НастройкиПрокси", ЗначениеНастройкиПрокси);
	
