	 Или ИмяСобытия = "ВыполненВходВОбластьДанных" Тогда
		
		ПодключитьОбработчикОжидания("ОбновитьТекущуюОбластьДанныхОбработчикОжидания", 0.1, Истина);
	КонецЕсли;
	
