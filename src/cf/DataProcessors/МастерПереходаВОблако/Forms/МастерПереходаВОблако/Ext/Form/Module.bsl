			Если Поиск.Количество() > 0 Тогда
				Поиск[0].ЛогинПользователяСервиса = Результат.Логин;
				НоваяСтрока.Идентификатор = Поиск[0].Идентификатор;
				НоваяСтрока.ПолноеИмяПользователяИБ = Поиск[0].ПолноеИмя;
